{% extends "IcoMassFightBundle::layout.html.twig" %}

{% block title %}
{{ parent() }}
{% if app.user is not null %}
<div class="pull-right btn-title">
    <a href="{{ path('ico_mass_fight_army') }}" class="btn btn-default" style="margin-right:15px;"><span class="fa fa-users"></span> Armées</a>
    <a href="{{ path('ico_mass_fight_commander_new') }}" class="btn btn-primary"><span class="fa fa-plus"></span> Nouveau commandant</a>
</div>
{% endif %}
{% endblock %}

{% block content %}
    <table class="table table-striped table-hover">
        <tr>
            <th>Nom</th>
            <th>Niveau</th>
            <th>Valeur de prestige</th>
            <th>Créateur</th>
            <th>Date de création</th>
            <th>Dernière modification</th>
        </tr>
        {% for commander in list %}
            <tr class="link" onclick="window.location.href = Routing.generate('ico_mass_fight_commander_edit', {id:{{ commander.id }}, slug: '{{ commander.slug }}'});">
                <td>{{ commander.name }}</td>
                <td>{{ commander.level }}</td>
                <td>{{ commander.prestigeValue }}</td>
                <td>{{ commander.createdBy.username }}</td>
                <td>{{ commander.created|date('d/m/Y') }}</td>
                <td>{{ commander.updated|date('d/m/Y') }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}