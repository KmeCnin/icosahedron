{% extends "IcoUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% set breadcrumb = [] %}
{% block breadcrumb %}
{% endblock %}
{% set title = 'Connexion' %}
{% set subtitle = 'Icosahedron' %}
{% set error = error|trans %}

{% block title %}
<div class="col-lg-6 col-lg-offset-3">
    <h1>{{ title }} <small>{{ subtitle }}</small></h1>
</div>
{% endblock %}

{% block content %}
{% block fos_user_content %}
<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 col-md-offset-2 col-lg-offset-3">
    {% if error %}
	   {% include 'error.html.twig' with {'message': error|trans} %}
    {% endif %}
	   <div class="well bs-component">
		  <fieldset>
			 <legend>Entrez vos identifiants</legend>
			 <form action="{{ path("fos_user_security_check") }}" method="post">
				<input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				
				<div class="form-group ">
				    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
				    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
				</div>
				<div class="form-group ">
				    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
				    <input class="form-control" type="password" id="password" name="_password" required="required" />
				</div>
				<input style="margin-right:20px;" class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
			 </form>
		  </fieldset>
	   </div>
    </div>
</div>
{% endblock fos_user_content %}
{% endblock content %}
