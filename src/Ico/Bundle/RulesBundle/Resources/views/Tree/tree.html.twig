<table class="trueTree">
    <tr>
	   <td rowspan="{{ trueTree.countNumberOfDescendingEntities(entity, 0) }}"><div class="entity main">{{ entity.name }}</div></td>
	   {% set childs = trueTree.getTrueChildren(entity, 0) %}
	   {% if childs|length > 0 %}
		  <td>
			 <div class="hdecoration"></div>
		  </td>
		  <td>
		  {% for child in childs %}
			 {% include 'IcoRulesBundle:Tree:descendingTree.html.twig' with {'entity': child, 'trueTree': trueTree, 'level': 1, 'loop': loop, 'brothers': childs} only %}
		  {% endfor %}
		  </td>
	   {% endif %}
    </tr>
</table>