{% extends "IcoRulesBundle::layout.html.twig" %}
{% form_theme filter 'IcoAppBundle:Form:fields.html.twig' %}

{% block content %}
<div class="well bs-component">
    
    {% if filter.keywords.vars.value is not empty %}
	   {% set keywords = filter.keywords.vars.value|split(' ') %}
	   <script>
		  var keywords_contexts = [0, 2]; // Index des colonnes où chercher les mots-clés à surligner
		  var keywords = new Array();
	   {% for keyword in keywords %}
		  keywords.push("{{ keyword }}");
	   {% endfor %}
	   </script>
    {% endif %}
	   
    {{ form_start(filter) }}
	   <fieldset class="row">
		  <legend class="col-xs-12">Recherche <small class="text-muted">(Total de {{ pagination.getTotalItemCount }} sort{% if pagination.getTotalItemCount > 1 %}s{% endif %} trouvé{% if pagination.getTotalItemCount > 1 %}s{% endif %})</small> <button type="submit" class="btn btn-default btn-sm"><span class="fa fa-refresh"></span>Filtrer</button></legend>
		  <div class="col-xs-4">
			 {{ form_row(filter.keywords) }}
		  </div>
		  <div class="col-xs-2">
			 {{ form_row(filter.spellSchool) }}
		  </div>
	   </fieldset>
    {{ form_end(filter) }}
</div>
<table class="table table-striped table-hover table-results">
    <tr>
	   <th{% if pagination.isSorted('spell.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Sort', 'spell.name') }}</th>
	   <th>{{ knp_pagination_sortable(pagination, 'École', 'spellSchool.name') }}</th>
	   <th>Description</th>
    </tr>
	   {% for spell in pagination %}
	   <tr>
		  <td class="link" data-toggle="modal" data-target="#modal_spell_{{ spell.id }}"><a>{{ spell.name }}</a></td>
		  <td>
			 {% if spell.spellSchool is not null %}
{% if spell.spellSchool.description is not empty %}<a class="preview text-nowrap" href="{{ path('ico_rules_spellschools_view', {'id': spell.spellSchool.id}) }}">{{ spell.spellSchool.name }}</a>{% else %}{{ spell.spellSchool.name }}{% endif %}
			 {% else %}
			 -
			 {% endif %}
		  </td>
		  <td>{{ spell.description }}</td>
	   </tr>
	   {% endfor %}
	   {# Modales #}
	   {% for spell in pagination %}
    <div class="modal fade modal-results" id="modal_spell_{{ spell.id }}" tabindex="-1" role="dialog" aria-labelledby="modal_spell_{{ spell.id }}" aria-hidden="true">
	   <div class="modal-dialog modal-lg">
		  <div class="modal-content">
			 <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
				<h4 class="modal-title" id="myModalLabel">{{ spell.name }} <small>[Sort]</small></h4>
			 </div>
			 <div class="modal-body">
				{% include 'IcoRulesBundle:Spells:display.html.twig' with {'spell': spell} only %}
			 </div>
			 <div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
			 </div>
		  </div>
	   </div>
    </div>
	   {% endfor %}
</table>
{# display navigation #}
<div class="navigation" style="text-align: center;">
{{ knp_pagination_render(pagination) }}
</div>
{% endblock %}