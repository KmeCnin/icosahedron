{% extends "IcoRulesBundle::layout.html.twig" %}

{% block content %}
<table class="table table-striped table-hover">
    <tr>
	   <th>Composante</th>
	   <th>Description</th>
    </tr>
	   {% for spellcomponent in list %}
    <tr class="link" onclick="window.location.href=Routing.generate('ico_rules_spellcomponents_view', {id: {{ spellcomponent.id }}});">
	   <td>{{ spellcomponent.name }}</td>
	   <td>{{ spellcomponent.description }}</td>
    </tr>
	   {% endfor %}
</table>
{% endblock %}