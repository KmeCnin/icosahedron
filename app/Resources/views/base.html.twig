<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{{ title }} - {{ subtitle }}</title>
{#	   <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">#}
	   <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
        {% stylesheets 
		  '@IcoAppBundle/Resources/public/css/bootstrap.css'
		  '@IcoAppBundle/Resources/public/css/lumen.min.css'
		  '@IcoAppBundle/Resources/public/css/leather.css'
		  '@IcoAppBundle/Resources/public/css/header.css'
		  '@IcoAppBundle/Resources/public/css/base.css'
	   filter='cssrewrite' %}
	   <link rel="stylesheet" href="{{ asset_url }}" />
	   {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	   <div class="navbar navbar-default">
		  <div class="container">
			 <div class="navbar-header">
				<img src="{{ asset('favicon.ico') }}" style="height:35px;position:absolute;top:8px;" alt="d20" />
				<a style="margin-left:30px;" href="../" class="navbar-brand"> Icosahedron</a>
				<button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				</button>
			 </div>

			 <ul class="nav navbar-nav">
				<li class="dropdown">
				    <a class="dropdown-toggle account" data-toggle="dropdown" href="#" id="feats">Règles <span class="caret"></span></a>
				    <ul class="dropdown-menu" aria-labelledby="feats">
					   <li><a href="{{ path('ico_rules_feats') }}">Dons</a></li>
				    </ul>
				</li>
			 </ul>

			 {% if is_granted('ROLE_ADMIN') %}
			 <ul class="nav navbar-nav">
				<li class="dropdown">
				    <a class="dropdown-toggle account" data-toggle="dropdown" href="#" id="feats">Administration <span class="caret"></span></a>
				    <ul class="dropdown-menu" aria-labelledby="feats">
					   <li><a href="{{ path('ico_admin_rules_update') }}">Synchroniser les règles</a></li>
				    </ul>
				</li>
			 </ul>
			 {% endif %}

			 <ul class="nav navbar-nav navbar-right">
				{% if app.user is not null %}
				<li class="dropdown">
				    <a class="dropdown-toggle account" data-toggle="dropdown" href="#" id="account">{{ app.user.username }} <span class="caret"></span></a>
				    <ul class="dropdown-menu" aria-labelledby="account">
					   <li><a href="{{ path('fos_user_security_login') }}">Profile</a></li>
					   <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
				    </ul>
				</li>
				{% else %}
				<li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
				{% endif %}
			 </ul>

		  </div>
	   </div>
	   <div class="container">
{% block body %}
		  <div class="row">
		  {% block breadcrumb %}
			 <ul class="breadcrumb">
			 {% for label, route in breadcrumb %}
				{% if route == '' or loop.index == breadcrumb|length %}
				<li>{{ label }}</li>
				{% else %}
				<li><a href="{{ path(route) }}">{{ label }}</a></li>
				{% endif %}
			 {% endfor %}
			 </ul>
		  {% endblock %}
		  {% block title %}
			 <div class="col-lg-12">
				<h1>{{ title }} <small>{{ subtitle }}</small></h1>
			 </div>
		  {% endblock %}
		  </div>

		  {% for flashMessage in app.session.flashbag.get('success') %}
			 {% include 'success.html.twig' with {'message': flashMessage} %}
		  {% endfor %}
		  {% for flashMessage in app.session.flashbag.get('error') %}
			 {% include 'error.html.twig' with {'message': flashMessage} %}
		  {% endfor %}
		  {% for flashMessage in app.session.flashbag.get('warning') %}
			 {% include 'warning.html.twig' with {'message': flashMessage} %}
		  {% endfor %}
		  {% for flashMessage in app.session.flashbag.get('info') %}
			 {% include 'info.html.twig' with {'message': flashMessage} %}
		  {% endfor %}
			 
			 <div class="col-lg-12">
		  {% block content %}{% endblock %}
			 </div>

			 <script>
				var assets = "{{ asset('') }}";
			 </script>
		  {% javascripts 
			 '@IcoAppBundle/Resources/public/js/jquery.js' 
			 '@IcoAppBundle/Resources/public/js/jquery-ui.min.js' 
			 '@IcoAppBundle/Resources/public/js/bootstrap.min.js' 
			 '@IcoAppBundle/Resources/public/js/chosen.jquery.min.js' 
			 '@IcoAppBundle/Resources/public/js/ready.js' 
		  %}
			 <script type="text/javascript" src="{{ asset_url }}"></script>
			 <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
			 <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
		  {% endjavascripts %}

{% endblock %}
	   </div>
    </body>
</html>
